{
  "DhcpDdns":
  {
    "ip-address": "127.0.0.1",
    "port": 53001,
    "control-socket": {
        "socket-type": "unix",
        "socket-name": "/tmp/kea-dhcp-ddns-ctrl.sock"
    },
    "tsig-keys": [],
    "forward-ddns" : <?include "/etc/kea/forward-ddns.json"?>,
    "reverse-ddns" : <?include "/etc/kea/reverse-ddns.json"?>,

    "loggers": [
      {
          "name": "kea-dhcp-ddns",
          "output_options": [
              {
                  "output": "stdout",
                  "pattern": "%-5p %m\n"
              }
          ],
          "severity": "INFO",
          "debuglevel": 0
      }
    ]
  }
}